---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEO from '../components/SEO.astro';
import { motion } from 'framer-motion';

const variants = {
  fadeIn: { opacity: 1, y: 0, transition: { duration: 0.8, ease: 'easeOut' } },
  bounce: { y: [0, -20, 0], transition: { duration: 1.5, repeat: Infinity, ease: 'easeInOut' } },
};
---

<html lang="en">
  <head>
    <SEO title="404 | BCDAstro" description="Oops! Page not found on Battle Creek Drone's platform." />
    <style is:global>
      @import '../styles/global.css';
      @import '../styles/tailwind.css';
    </style>
    <script src="https://kit.fontawesome.com/8b46356787.js" crossorigin="anonymous"></script>
  </head>
  <body class="bg-gradient-to-br from-gray-950 to-black text-white font-sans min-h-screen flex flex-col">
    <Header />

    <main class="flex-grow flex flex-col justify-center items-center text-center px-4 sm:px-6 lg:px-8">
      <motion.div
        class="bg-gradient-to-br from-cyan-500 to-purple-600 p-6 sm:p-8 rounded-3xl shadow-2xl"
        initial={{ opacity: 0, y: -50 }}
        animate="fadeIn"
        variants={variants}
      >
        <h1 class="text-6xl sm:text-7xl font-extrabold tracking-tight text-white drop-shadow-lg mb-4">
          404 <i class="fas fa-drone-alt animate-pulse text-cyan-300"></i>
        </h1>
        <p class="text-lg sm:text-xl text-white font-light mb-6">Oops! The drone lost its signal on this page.</p>
        <motion.a
          href="/"
          class="inline-block px-6 sm:px-8 py-3 rounded-full text-white bg-black/70 hover:bg-black hover-glow transition-all duration-300"
          whileHover={{ scale: 1.05 }}
          whileTap={{ scale: 0.95 }}
        >
          Back to Launchpad <i class="fas fa-rocket ml-2"></i>
        </motion.a>
      </motion.div>

      <motion.div
        class="mt-8 sm:mt-12"
        variants={variants}
        animate="bounce"
      >
        <i class="fas fa-cloud-drizzle w-16 h-16 sm:w-20 sm:h-20 text-cyan-400 opacity-50 animate-float"></i>
      </motion.div>
    </main>

    <Footer />
  </body>

  <style>
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }
    .animate-float {
      animation: float 3s ease-in-out infinite;
    }
  </style>
</html>