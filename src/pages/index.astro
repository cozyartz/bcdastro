---
import Layout from '../components/Layout.astro';
import ServiceCard from '../components/ServiceCard.astro';
---

<Layout title="Battle Creek Drone - Professional Aerial Solutions">
  <div class="container">
    <!-- Hero Section -->
    <section class="hero">
      <div class="subtitle">Aerial Solutions for the Modern World</div>
      <h1>Battle Creek Drone</h1>
      <p>Professional drone services delivering efficient, accurate, and cost-effective solutions for various industries. Licensed and insured pilots with cutting-edge technology.</p>
      <div class="flex gap-4 justify-center flex-wrap">
        <a href="/services" class="professional-button">
          <i class="fas fa-drone"></i> View Services
        </a>
        <a href="/contact" class="professional-button secondary">
          <i class="fas fa-phone"></i> Get Quote
        </a>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="stats">
      <div class="stat-item">
        <span class="stat-number">500+</span>
        <div class="stat-label">Projects Completed</div>
      </div>
      <div class="stat-item">
        <span class="stat-number">100%</span>
        <div class="stat-label">Licensed & Insured</div>
      </div>
      <div class="stat-item">
        <span class="stat-number">24/7</span>
        <div class="stat-label">Emergency Response</div>
      </div>
      <div class="stat-item">
        <span class="stat-number">5â˜…</span>
        <div class="stat-label">Customer Rating</div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="services">
      <ServiceCard 
        icon="fas fa-seedling"
        title="Agricultural Solutions"
        description="Optimize crop management, monitor soil health, and detect potential issues early with our aerial imaging and data analysis services."
        features={[
          "Crop health monitoring",
          "Soil analysis mapping", 
          "Irrigation planning",
          "Yield optimization"
        ]}
      />
      
      <ServiceCard 
        icon="fas fa-ruler-combined"
        title="Aerial Measurements"
        description="Our advanced drone systems provide accurate and detailed measurements for construction, land surveying, and property development projects."
        features={[
          "Precision surveying",
          "Volume calculations",
          "Topographic mapping",
          "Progress monitoring"
        ]}
      />
      
      <ServiceCard 
        icon="fas fa-cube"
        title="3D Mapping & Modeling"
        description="Revolutionary photogrammetry techniques that capture and process aerial imagery to create detailed, three-dimensional models of landscapes and structures."
        features={[
          "High-resolution 3D models",
          "Point cloud generation",
          "Digital twin creation",
          "Virtual site tours"
        ]}
      />
      
      <ServiceCard 
        icon="fas fa-search"
        title="Infrastructure Inspections"
        description="Safer, more efficient, and cost-effective infrastructure assessments using high-resolution cameras and advanced sensors."
        features={[
          "Bridge inspections",
          "Tower assessments",
          "Roof evaluations",
          "Safety compliance"
        ]}
      />
      
      <ServiceCard 
        icon="fas fa-shield-alt"
        title="Emergency Response"
        description="Rapid deployment for emergency situations, search and rescue operations, and disaster assessment with real-time data transmission."
        features={[
          "Search & rescue support",
          "Disaster assessment",
          "Real-time monitoring",
          "Emergency mapping"
        ]}
      />
      
      <ServiceCard 
        icon="fas fa-video"
        title="Aerial Photography"
        description="Professional aerial photography and videography services for real estate, events, marketing, and documentation purposes."
        features={[
          "4K video recording",
          "High-resolution photography",
          "Real estate marketing",
          "Event documentation"
        ]}
      />
    </section>

    <!-- Why Choose Us Section -->
    <section class="content-section glass">
      <h2 class="section-title">Why Choose Battle Creek Drone?</h2>
      <p class="section-subtitle">Professional Excellence in Every Flight</p>
      
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem; margin-top: 3rem;">
        <div style="text-align: center; padding: 1.5rem;">
          <i class="fas fa-certificate" style="font-size: 2.5rem; color: var(--accent-cyan); margin-bottom: 1rem;"></i>
          <h3 style="margin-bottom: 1rem;">Licensed & Insured</h3>
          <p style="opacity: 0.8;">FAA certified pilots with comprehensive insurance coverage for your peace of mind.</p>
        </div>
        <div style="text-align: center; padding: 1.5rem;">
          <i class="fas fa-rocket" style="font-size: 2.5rem; color: var(--accent-cyan); margin-bottom: 1rem;"></i>
          <h3 style="margin-bottom: 1rem;">Cutting-Edge Technology</h3>
          <p style="opacity: 0.8;">Latest drone technology and sensors for unmatched precision and data quality.</p>
        </div>
        <div style="text-align: center; padding: 1.5rem;">
          <i class="fas fa-clock" style="font-size: 2.5rem; color: var(--accent-cyan); margin-bottom: 1rem;"></i>
          <h3 style="margin-bottom: 1rem;">Fast Turnaround</h3>
          <p style="opacity: 0.8;">Quick project completion and data delivery to keep your operations on schedule.</p>
        </div>
        <div style="text-align: center; padding: 1.5rem;">
          <i class="fas fa-dollar-sign" style="font-size: 2.5rem; color: var(--accent-cyan); margin-bottom: 1rem;"></i>
          <h3 style="margin-bottom: 1rem;">Competitive Pricing</h3>
          <p style="opacity: 0.8;">Cost-effective solutions without compromising on quality or safety standards.</p>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="hero">
      <h2 style="font-size: 2.5rem; margin-bottom: 1rem;">Ready to Elevate Your Project?</h2>
      <p>Contact Battle Creek Drone today for a customized solution that meets your specific needs and budget.</p>
      <div class="flex gap-4 justify-center flex-wrap mt-4">
        <a href="/contact" class="professional-button">
          <i class="fas fa-envelope"></i> Get Started
        </a>
        <a href="tel:269.425.1770" class="professional-button secondary">
          <i class="fas fa-phone"></i> Call Now
        </a>
      </div>
    </section>
  </div>
</Layout>

<style>
  #services {
    scroll-margin-top: 2rem;
  }
</style>