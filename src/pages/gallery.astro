---
import Layout from '../components/Layout.astro';
---

<Layout title="Gallery - Battle Creek Drone">
  <div class="container">
    <section class="hero">
      <div class="subtitle">Premium Aerial Content</div>
      <h1>Gallery & Shop</h1>
      <p>Browse and purchase high-quality drone footage and photography from Battle Creek and surrounding areas. All content available for immediate download.</p>
    </section>

    <!-- Featured Content -->
    <section class="content-section glass">
      <h2 class="section-title">Featured Content</h2>
      <p class="section-subtitle">Our most popular aerial footage and photography</p>
      
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; margin-top: 3rem;">
        <div class="gallery-item">
          <div class="gallery-image">
            <img src="https://images.pexels.com/photos/442587/pexels-photo-442587.jpeg?auto=compress&cs=tinysrgb&w=600" alt="Aerial view of Battle Creek downtown" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px;">
            <div class="gallery-overlay">
              <i class="fas fa-play-circle" style="font-size: 3rem; color: white;"></i>
            </div>
          </div>
          <div class="gallery-info">
            <h3>Downtown Battle Creek</h3>
            <p>4K aerial footage of downtown Battle Creek during golden hour</p>
            <div class="gallery-details">
              <span class="format"><i class="fas fa-video"></i> 4K Video</span>
              <span class="duration"><i class="fas fa-clock"></i> 2:30</span>
            </div>
            <div class="gallery-price">
              <span class="price">$49.99</span>
              <button class="buy-button">
                <i class="fas fa-shopping-cart"></i> Purchase
              </button>
            </div>
          </div>
        </div>

        <div class="gallery-item">
          <div class="gallery-image">
            <img src="https://images.pexels.com/photos/1624496/pexels-photo-1624496.jpeg?auto=compress&cs=tinysrgb&w=600" alt="Agricultural fields aerial view" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px;">
            <div class="gallery-overlay">
              <i class="fas fa-camera" style="font-size: 3rem; color: white;"></i>
            </div>
          </div>
          <div class="gallery-info">
            <h3>Agricultural Landscapes</h3>
            <p>High-resolution photos of local farmland and crop fields</p>
            <div class="gallery-details">
              <span class="format"><i class="fas fa-image"></i> RAW Photos</span>
              <span class="duration"><i class="fas fa-images"></i> 15 Images</span>
            </div>
            <div class="gallery-price">
              <span class="price">$29.99</span>
              <button class="buy-button">
                <i class="fas fa-shopping-cart"></i> Purchase
              </button>
            </div>
          </div>
        </div>

        <div class="gallery-item">
          <div class="gallery-image">
            <img src="https://images.pexels.com/photos/1666021/pexels-photo-1666021.jpeg?auto=compress&cs=tinysrgb&w=600" alt="Sunset aerial footage" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px;">
            <div class="gallery-overlay">
              <i class="fas fa-play-circle" style="font-size: 3rem; color: white;"></i>
            </div>
          </div>
          <div class="gallery-info">
            <h3>Sunset Collection</h3>
            <p>Breathtaking sunset footage over Michigan landscapes</p>
            <div class="gallery-details">
              <span class="format"><i class="fas fa-video"></i> 4K Video</span>
              <span class="duration"><i class="fas fa-clock"></i> 5:15</span>
            </div>
            <div class="gallery-price">
              <span class="price">$79.99</span>
              <button class="buy-button">
                <i class="fas fa-shopping-cart"></i> Purchase
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Categories -->
    <section class="content-section glass">
      <h2 class="section-title">Browse by Category</h2>
      <p class="section-subtitle">Find the perfect aerial content for your project</p>
      
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem; margin-top: 3rem;">
        <div class="category-card">
          <i class="fas fa-city" style="font-size: 2.5rem; color: var(--accent-cyan); margin-bottom: 1rem;"></i>
          <h3>Urban & Cityscapes</h3>
          <p>Downtown areas, commercial districts, and urban development</p>
          <span class="item-count">24 items</span>
        </div>
        
        <div class="category-card">
          <i class="fas fa-tree" style="font-size: 2.5rem; color: var(--accent-cyan); margin-bottom: 1rem;"></i>
          <h3>Nature & Landscapes</h3>
          <p>Forests, lakes, rivers, and natural Michigan beauty</p>
          <span class="item-count">18 items</span>
        </div>
        
        <div class="category-card">
          <i class="fas fa-seedling" style="font-size: 2.5rem; color: var(--accent-cyan); margin-bottom: 1rem;"></i>
          <h3>Agricultural</h3>
          <p>Farmland, crop fields, and agricultural operations</p>
          <span class="item-count">32 items</span>
        </div>
        
        <div class="category-card">
          <i class="fas fa-home" style="font-size: 2.5rem; color: var(--accent-cyan); margin-bottom: 1rem;"></i>
          <h3>Real Estate</h3>
          <p>Properties, developments, and neighborhood overviews</p>
          <span class="item-count">15 items</span>
        </div>
        
        <div class="category-card">
          <i class="fas fa-industry" style="font-size: 2.5rem; color: var(--accent-cyan); margin-bottom: 1rem;"></i>
          <h3>Industrial</h3>
          <p>Factories, infrastructure, and commercial facilities</p>
          <span class="item-count">12 items</span>
        </div>
        
        <div class="category-card">
          <i class="fas fa-calendar-alt" style="font-size: 2.5rem; color: var(--accent-cyan); margin-bottom: 1rem;"></i>
          <h3>Events</h3>
          <p>Festivals, gatherings, and special occasions</p>
          <span class="item-count">8 items</span>
        </div>
      </div>
    </section>

    <!-- Licensing & Usage -->
    <section class="content-section glass">
      <h2 class="section-title">Licensing & Usage Rights</h2>
      <p class="section-subtitle">Flexible licensing options for your needs</p>
      
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; margin-top: 3rem;">
        <div class="license-card">
          <div class="license-header">
            <i class="fas fa-user" style="font-size: 2rem; color: var(--accent-cyan);"></i>
            <h3>Personal License</h3>
            <span class="license-price">Standard Price</span>
          </div>
          <ul class="license-features">
            <li><i class="fas fa-check"></i> Personal projects</li>
            <li><i class="fas fa-check"></i> Social media use</li>
            <li><i class="fas fa-check"></i> Non-commercial use</li>
            <li><i class="fas fa-times"></i> Commercial use</li>
            <li><i class="fas fa-times"></i> Resale rights</li>
          </ul>
        </div>
        
        <div class="license-card featured">
          <div class="license-header">
            <i class="fas fa-briefcase" style="font-size: 2rem; color: var(--accent-cyan);"></i>
            <h3>Commercial License</h3>
            <span class="license-price">+50% Premium</span>
          </div>
          <ul class="license-features">
            <li><i class="fas fa-check"></i> Commercial projects</li>
            <li><i class="fas fa-check"></i> Marketing materials</li>
            <li><i class="fas fa-check"></i> Website usage</li>
            <li><i class="fas fa-check"></i> Print media</li>
            <li><i class="fas fa-times"></i> Resale rights</li>
          </ul>
        </div>
        
        <div class="license-card">
          <div class="license-header">
            <i class="fas fa-globe" style="font-size: 2rem; color: var(--accent-cyan);"></i>
            <h3>Extended License</h3>
            <span class="license-price">+100% Premium</span>
          </div>
          <ul class="license-features">
            <li><i class="fas fa-check"></i> Unlimited usage</li>
            <li><i class="fas fa-check"></i> Broadcast rights</li>
            <li><i class="fas fa-check"></i> Resale rights</li>
            <li><i class="fas fa-check"></i> Exclusive options</li>
            <li><i class="fas fa-check"></i> Custom licensing</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Payment Information -->
    <section class="content-section glass">
      <h2 class="section-title">Secure Payment Processing</h2>
      <p class="section-subtitle">Safe and convenient payment options</p>
      
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; margin-top: 3rem;">
        <div style="text-align: center; padding: 2rem;">
          <i class="fas fa-shield-alt" style="font-size: 2.5rem; color: var(--accent-cyan); margin-bottom: 1rem;"></i>
          <h3>Secure Checkout</h3>
          <p style="opacity: 0.8; margin-bottom: 1.5rem;">SSL encrypted payment processing with industry-standard security protocols.</p>
          <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
            <span class="payment-method"><i class="fab fa-cc-visa"></i> Visa</span>
            <span class="payment-method"><i class="fab fa-cc-mastercard"></i> Mastercard</span>
            <span class="payment-method"><i class="fab fa-cc-amex"></i> Amex</span>
            <span class="payment-method"><i class="fab fa-paypal"></i> PayPal</span>
          </div>
        </div>
        
        <div style="text-align: center; padding: 2rem;">
          <i class="fas fa-download" style="font-size: 2.5rem; color: var(--accent-cyan); margin-bottom: 1rem;"></i>
          <h3>Instant Download</h3>
          <p style="opacity: 0.8; margin-bottom: 1.5rem;">Immediate access to your purchased content with high-speed download links.</p>
          <ul style="text-align: left; opacity: 0.8;">
            <li><i class="fas fa-check"></i> Multiple format options</li>
            <li><i class="fas fa-check"></i> Full resolution files</li>
            <li><i class="fas fa-check"></i> Lifetime re-download</li>
          </ul>
        </div>
        
        <div style="text-align: center; padding: 2rem;">
          <i class="fas fa-headset" style="font-size: 2.5rem; color: var(--accent-cyan); margin-bottom: 1rem;"></i>
          <h3>Customer Support</h3>
          <p style="opacity: 0.8; margin-bottom: 1.5rem;">Dedicated support team to help with licensing questions and technical issues.</p>
          <a href="/contact" class="professional-button">
            <i class="fas fa-envelope"></i> Contact Support
          </a>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="hero">
      <h2 style="font-size: 2.5rem; margin-bottom: 1rem;">Need Custom Content?</h2>
      <p>Can't find what you're looking for? We offer custom drone photography and videography services.</p>
      <div class="flex gap-4 justify-center flex-wrap mt-4">
        <a href="/contact" class="professional-button">
          <i class="fas fa-camera"></i> Request Custom Work
        </a>
        <a href="/services" class="professional-button secondary">
          <i class="fas fa-drone"></i> View Services
        </a>
      </div>
    </section>
  </div>
</Layout>

<style>
  .gallery-item {
    background: var(--glass-bg);
    border-radius: 12px;
    border: 1px solid var(--glass-border);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .gallery-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .gallery-image {
    position: relative;
    overflow: hidden;
  }

  .gallery-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .gallery-image:hover .gallery-overlay {
    opacity: 1;
  }

  .gallery-info {
    padding: 1.5rem;
  }

  .gallery-info h3 {
    margin-bottom: 0.5rem;
    color: var(--white);
  }

  .gallery-info p {
    opacity: 0.8;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .gallery-details {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.8rem;
    opacity: 0.7;
  }

  .gallery-price {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .price {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--accent-cyan);
  }

  .buy-button {
    background: linear-gradient(45deg, var(--primary-blue), var(--secondary-blue));
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    color: white;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .buy-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(30, 64, 175, 0.3);
  }

  .category-card {
    text-align: center;
    padding: 2rem;
    border-radius: 12px;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .category-card:hover {
    transform: translateY(-5px);
    border-color: var(--accent-cyan);
  }

  .category-card h3 {
    margin-bottom: 1rem;
    color: var(--white);
  }

  .category-card p {
    opacity: 0.8;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .item-count {
    background: var(--accent-cyan);
    color: var(--dark-navy);
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .license-card {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .license-card.featured {
    border-color: var(--accent-cyan);
    transform: scale(1.05);
  }

  .license-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .license-card.featured:hover {
    transform: scale(1.05) translateY(-5px);
  }

  .license-header {
    margin-bottom: 2rem;
  }

  .license-header h3 {
    margin: 1rem 0 0.5rem 0;
    color: var(--white);
  }

  .license-price {
    color: var(--accent-cyan);
    font-weight: 600;
  }

  .license-features {
    list-style: none;
    text-align: left;
  }

  .license-features li {
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .license-features .fa-check {
    color: var(--success-green);
  }

  .license-features .fa-times {
    color: var(--medium-gray);
  }

  .payment-method {
    padding: 0.5rem 1rem;
    background: var(--glass-bg);
    border-radius: 8px;
    border: 1px solid rgba(255,255,255,0.2);
    font-size: 0.9rem;
  }
</style>