---
import DarkToggle from './DarkToggle.astro';

const nav = [
  { href: "#services", label: "Services" },
  { href: "#portfolio", label: "Portfolio" },
  { href: "/media", label: "Gallery" },
  { href: "/contact", label: "Contact" },
];
---

<header class="fixed top-0 inset-x-0 z-50 bg-black/70 backdrop-blur border-b border-gray-800">
  <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-purple-600">
      Battle Creek Drone
    </a>
    <div class="flex items-center space-x-4">
      <nav class="hidden md:flex space-x-6 text-sm">
        {nav.map(item => (
          <a href={item.href} class="text-gray-300 hover:text-cyan-400 transition-colors">{item.label}</a>
        ))}
      </nav>
      <DarkToggle client:load />
    </div>
  </div>
</header>
